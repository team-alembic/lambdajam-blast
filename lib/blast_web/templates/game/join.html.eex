<div class="page join-page">
  <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  <script type="text/javascript">
    new window.ClipboardJS('.copy-link');
  </script>
  <div class="dashboard">
    <div>
      <a class="button copy-link" data-clipboard-text="<%= "#{Plug.Conn.get_req_header(@conn, "Host")}#{Routes.game_path(@conn, :join, @game_id)}" %>">Copy link 📋</a>
      <a class="button" href="<%= Routes.game_path(@conn, :join_game, @game_id) %>">Join Game 🎮</a>
    </div>
    <p>
      Copy and share the link to play with friends 👫
    </p>
  </div>
</div>